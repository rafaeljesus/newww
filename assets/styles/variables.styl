fonts = 'Source Sans Pro', 'Lucida Grande', sans-serif
codefonts = Monaco, Consolas, "Liberation Mono", Menlo, Monaco, Courier, monospace

npmred = #cb3837

greigh0 = rgba(black, 1)
greigh1 = rgba(black, 0.9)
greigh2 = rgba(black, 0.8)
greigh3 = rgba(black, 0.6)
greigh4 = rgba(black, 0.4)
greigh5 = rgba(black, 0.2)
greigh6 = rgba(black, 0.08)
greigh7 = rgba(black, 0.04)
greigh8 = rgba(black, 0.02)

green = #07A700
orange = #ff7900
yellow = #f3b600

background-color = white
text-color = greigh3
text-color-subdued = greigh4
footer-text-color = rgba(white, 0.5)

mosaicSize = 90px
userAvatarSize = 50px
starHeight = 16px
userInfoAvatarSize = 45px
userInfoAvatarSizeMobile = 25px

fullColumnWidth = 1180px
narrowColumnWidth = 420px

errorColor = rgba(255, 246, 195, 0.78)


// @extend Classes

.vanilla-list
  list-style none
  margin 0
  padding 0
  li
    list-style none

.ellipsis
  white-space nowrap
  overflow-x hidden
  text-overflow ellipsis

.unstyledTextInput
  border none
  outline none
  background none
  margin 0
  padding 0

.red-on-hover
  &:hover
    color npmred

// Mixins

columns(n)
  -webkit-columns n
  -moz-columns n
  columns n

column-gap(n)
  -webkit-column-gap n
  -moz-column-gap n
  column-gap n

column-break-inside(n)
  column-break-inside n
  -webkit-column-break-inside n
  -moz-column-break-inside n
