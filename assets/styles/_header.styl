body>header
  padding 14px 20px 10px
  border-bottom 1px solid lightgrey
  background greigh6
  display -webkit-flex
  display flex
  flex-flow row wrap
  -webkit-flex-flow row wrap
  -webkit-align-items center
  align-items center
  text-align center

  @media only screen and (max-width: mobileMaxWidth)
    text-align left

  >*
    flex 0 0 auto;

  >nav
    order 3
    height 47px
    font-weight bold
    padding 10px 14px 14px

    @media only screen and (max-width: mobileMaxWidth)
      order 1
      flex 1 1 50%
      text-align right
      padding-right 0

    a+a
      margin-left 1em

body>nav
  height 38px
  color background-color
  font-size 14px
  font-weight 600
  text-align right
  border-bottom 1px solid darken(npmred, 10%)
  background npmred
  overflow hidden

  @media only screen and (max-width: mobileMaxWidth)
    display none
    position absolute
    top 86px
    left 0
    right 0
    border-bottom 0
    background greigh6
    z-index 12

  h2
    margin 0
    padding 0
    a
      margin 0
      padding 0
      text-decoration none
      border none
      color rgba(background-color, 0.8)
      padding-right 100px
      background none
      &:hover
        color rgba(background-color, 1)
        background none
        text-decoration none
        border none

  a
    display inline-block
    line-height 38px
    padding 0 10px
    margin 0
    color rgba(background-color, 0.8)
    text-decoration none
    background npmred
    transition all 0.1s

    &:first-child
      float left
      padding 0
      text-transform lowercase
      display inline-block
      min-width 240px
      text-align left

      @media only screen and (max-width: mobileMaxWidth)
        display none

      &:hover
        background none
        border none

    &:hover, &.active
      color rgba(background-color, 1)
      text-decoration none
      background darken(npmred, 20%)

    @media only screen and (max-width: mobileMaxWidth)
      display block
      text-align center
      margin 0
      background npmred
      opacity 1
      border-bottom 1px solid white

      &:hover
        color npmred
        background greigh6
        border-bottom 1px solid white

  .container
    @media only screen and (max-width: mobileMaxWidth)
      padding 0

.secondary-nav
  text-align center
  min-height 65px
  margin 0 0 25px
  background url(../images/secondary-nav-bg.png) repeat-x bottom left

  @media only screen and (max-width: mobileMaxWidth)
    min-height 45px

  a
    display inline-block
    height 63px
    margin 0 30px 0 0
    font-weight 600
    font-size 16px
    line-height 65px
    color text-color-subdued
    text-decoration none

    @media only screen and (max-width: mobileMaxWidth)
      font-weight 600
      font-size 16px
      line-height 45px
      height 43px
      margin 0 15px 0 0

    &:hover, &.active
      color greigh2
      border-bottom 2px solid npmred

    &:last-child
      margin-right 0

#profile-nav
  min-height 67px
  margin 0 0 95px
  background url(../images/secondary-nav-bg.png) repeat-x bottom left

  @media only screen and (max-width: mobileMaxWidth)
    position relative
    margin 0 0 50px
    background none

  .container
    padding-left 170px
    max-width 1010px

    @media only screen and (max-width: mobileMaxWidth)
      padding-left 0
      position absolute
      top -80px
      left 105px

  a
    display inline-block
    height 67px
    margin 0 30px 0 0
    font-weight 600
    font-size 16px
    line-height 67px
    color text-color-subdued

    &:before
      margin-right 8px
      float left
      line-height 69px

      @media only screen and (max-width: mobileMaxWidth)
        line-height 15px

    @media only screen and (max-width: mobileMaxWidth)
      display inline-block
      height auto
      margin 0 10px 0 0
      font-size 13px
      line-height 15px
      color rgba(255,255,255,.4)

    &:hover
      color greigh2

#npm-logo
  order 1
  img
    vertical-align middle
    width 125px
    height 49px

  .cobrand
    font-weight bold

  .cobrand::before
    content "♥︎"
    font-size 150%
    color npmred
    vertical-align middle
    padding 0 0.5em

  @media only screen and (max-width: mobileMaxWidth)

    flex 1 1 50%
    padding 0
    img
      width 80px

#npm-search
  position relative
  height 47px
  padding 0
  margin 0 1em
  border 1px solid greigh5
  border-radius 2px
  background background-color
  text-align left
  &:hover
    border 1px solid greigh4

  flex 1 0 auto;
  order 2

  @media only screen and (max-width: mobileMaxWidth)
    order 3
    flex 1 0 100%
    margin 0

#site-search-container
  margin: 7px 80px 0 7px

#site-search
  background: none
  border: 0
  font-size: 18px
  font-weight: 300
  height: 30px
  margin: 0
  outline: 0
  padding: 0 2px 0 0

#site-search-submit
  position absolute
  top 0
  right 0
  height 45px
  width 46px
  border 0
  text-indent -9999em
  cursor pointer
  outline 0
  border-left 1px solid greigh5
  border-radius 0 2px 2px 0
  background url(../images/ico-search.svg) no-repeat 50% 50%
  background-size 16px 16px


  &:hover
    width 49px
    height 46px
    top -1px
    right -1px
    border 1px solid darken(npmred, 15%)
    border-bottom none
    background: npmred url(../images/ico-search-hover.svg) no-repeat 50% 50%
    background-size 16px 16px

#autocomplete-direct-results:before
  content "Packages"

#autocomplete-search-suggestions:before
  content "Search Suggestions"

.autocomplete-group
  padding-left 6px
  color greigh4
  font-style italic

.autocomplete-suggestions
  position absolute
  max-height 400px
  z-index 9999
  width 545px
  margin-top 8px
  margin-left -8px
  border-color greigh5

#powered-by-constructor-io
  background-color greigh6
  margin-left -8px
  border-color greigh5

#user-info
  order 3
  img
    float right
    display block
    width avatarSizeNav
    margin 0 0 0 10px
    border-radius 2px

  ul
    @extend .vanilla-list
    float right
    display block
    text-align right
    margin-top 8px
    li
      line-height 1
    &.single
      margin-top 0
      li
        line-height avatarSizeNav
        vertical-align top

  @media only screen and (max-width: mobileMaxWidth)
    flex 1 1 50%
    order 2

    ul.single li
      line-height avatarSizeNavMobile
    img
      width avatarSizeNavMobile

    &.anonymous
      img
        display none

  a,
  button[type=submit]
    &.subdued
      color greigh4
      font-size 14px
      font-family inherit
      border 0
      -webkit-user-select text
      -moz-user-select text
      cursor pointer
      margin 0
      padding 0
      background transparent
      width auto
      height auto
      line-height inherit
      border-radius unset
      text-align right
      clear none
      display inline
      letter-spacing inherit
      -moz-appearance none
      appearance none
      vertical-align baseline
      white-space normal
      outline none

      &:hover
        text-decoration underline !important
