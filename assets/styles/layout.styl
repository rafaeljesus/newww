      color text-color


// Boxes

.box
  margin 0 0 30px
  // border-radius 6px
  // border 2px solid gray5
  font-weight 600
  font-size 16px

  p
    padding 14px
    margin 0

  a
    text-decoration none
    &:hover
      text-decoration underline

  li
    line-height 2.5
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    padding-right 10px
    border-bottom 1px solid gray5

    &:last-child
      border-bottom none

    span
      display inline-block
      width 28%
      margin 0 8px 0 0
      text-align left
      padding 0 2% 0 0
      // border-right 1px solid gray5
      color text-color-subdued

  &.list
    li
      padding 10px 15px
      border-bottom 1px solid gray5
      line-height 15px
      white-space normal
      overflow auto
      text-overflow none

      &:last-child
        border-bottom 0

      &.disabled
        color gray5

        a
          color gray5

      a
        display block
        font 700 16px/21px fonts

.box-action
  border-top 1px solid gray5
  padding 14px

  .list &
    border-top 0

  .icon-arrow-tri-right:before
    content ""

  .icon-arrow-tri-right:after
    font-family icomoon
    content "\e605"
    font-size 7px
    margin 0 0 0 6px

// Health and Stats

#health-stats
  .stat
    position relative
    border-bottom 1px solid gray5

    p
      position relative
      height 40px
      padding 0 14px
      font 400 16px/40px fonts
      z-index 1

      span
        float right
        font 600 12px/40px fonts
        color text-color-subdued


    em
      position absolute
      left 0
      top 0
      bottom 0
      background gray6
      z-index 0

  .overall-health
    position relative
    height 50px
    margin 0 -2px -2px
    padding 0 16px
    border-radius 0 0 4px 4px
    color background-color
    font 400 16px/50px fonts

    &.yay
      background green

    &.meh
      background orange

    &.uh-oh
      background yellow

    &.rip
      background black

    span
      float right
      margin 2px 0 0
      font-size 26px

// Tags

.tags
  margin 0 0 60px

  a
    display inline-block
    font 600 14px/14px fonts
    margin 0 3px 5px 0
    padding 5px 7px
    border-radius 2px
    border 1px solid gray5

    &:hover
      color background-color
      border 1px solid npmred
      background npmred

    &.icon-add
      color background-color
      border-color npmred
      background npmred

      &:hover
        border-color gray2
        background gray2

      &:before
        font-size 10px
        text-align center;

// Pagination
.pagination
  margin 50px 0 0

  a
    display inline-block
    border-radius 2px
    border 1px solid gray5
    text-align center
    margin 0 2px 10px
    padding 1px 11px
    font 600 16px/25px fonts
    color npmred

    &:hover, &.active
      color background-color
      background gray5

.side-nav
  margin 0 0 50px

  li
    list-style none
    a
      display inline-block
      border 1px solid gray5
      margin 0 0 5px
      padding 5px 15px
      text-align center
      font 700 16px/25px fonts
      border-radius 4px

      &:hover, &.active
        color background-color
        background npmred


// Lists

ul.userMosaic
  list-style none
  margin 0 0 30px 0
  padding 0
  float none
  overflow hidden

  li
    float left
    display block
    margin 0
    padding 3px 0
    position relative

  img
    display inline-block
    width mosaicSize
    height mosaicSize
    margin-right 10px
    border-radius 5px
    transition all 0.3s

  span
    margin 0
    padding 0
    vertical-align top
    line-height mosaicSize
    display none

  a:before
    display block
    position absolute
    width mosaicSize
    line-height mosaicSize
    text-align center
    content attr(title) " "
    opacity 0
    transition all 0.3s
    text-overflow ellipsis
    overflow hidden
    padding 0 6px

  // Many-user Mosaic
  &.many
    a:hover
      img
        opacity 0

    &:hover
      a:before
        opacity 1
      img
        opacity 0.1

  // Single-user Mosaic
  &.one
    a:before
      display none
    span
      display inline-block
