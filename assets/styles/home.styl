#subheader
  position relative

#home-stats
  position relative
  margin 25px auto 25px auto
  padding 0
  max-width 900px
  display flex
  flex-wrap wrap
  justify-content space-between

  @media only screen and (max-width: 820px)
    display block
    .stat
      display block
      width 200px
      margin 15px auto

  @media only screen and (max-width: mobileMaxWidth)
    display none

.stat
  position relative
  flex 0 1 auto
  line-height 20px
  font-size 14px
  color text-color-subdued
  margin 20px 20px 20px 0
  padding-left 46px
  &.icon-package-hex
    &:before
      top 0
      font-size 36px

  &:before
    position absolute
    top 2px
    left 0
    font-size 30px
    margin-right 10px
    margin-top 2px
    color greigh2

  strong
    code-font()
    font-weight 600
    font-size 16px
    display block
    color greigh2
