.billing-header
  text-align left

.org-table
  border 1px solid table-border-grey

  tbody tr
    border-top 1px solid table-border-grey

  th,td
    padding 20px

    &:first-child
      width 70%

    &:last-child
      text-align center
      width 10%

  tbody tr:last-child
    td:last-child
      text-align left
      width auto

  .circle-avatar,
  .name
    display inline-block
    vertical-align middle

  .circle-avatar
    padding-right 20px

    img
      border-radius 50%
      width 42px
      height 42px

  .display-name
    display block

  .icon-x
    border 0
    background none
    cursor pointer

.org-user-add
  input[type=text],
  input[type=radio],
  fieldset,
  label,
  button
    display inline-block
    vertical-align middle

  input[type=text]
    width 60%
