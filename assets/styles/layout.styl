.container
  position relative
  max-width 1180px
  margin 0 auto
  padding 0 20px

  &:after
    content: ""
    display table
    clear both

  &.pad-top
    padding-top 50px

.layout-left
  float left
  width 60%
  margin-bottom 90px

  & .layout-left
    margin-bottom 25px

  @media only screen and (max-width: 1024px)
    width 57%

  @media only screen and (max-width: 767px)
    float none
    width 100%

  &.half
    width 48%

    @media only screen and (max-width: 767px)
      float none
      width 100%

.layout-right
  margin 0 0 90px 72.5%
  padding-top 20px

  @media only screen and (max-width: 1024px)
    margin 0 0 0 65%

  @media only screen and (max-width: 767px)
    margin 0

  &.half
    margin-left 54%

    @media only screen and (max-width: 767px)
      margin-left 0


.thirds
  overflow hidden
  padding-bottom 40px

.third
  float left
  width 31.118846411804154%
  margin-right 3.221730382293762%

  &:nth-child(3n)
    margin-right 0 !important

  @media only screen and (max-width: 1023px)
    width 48%
    margin-right 4% !important

    &:nth-child(3n)
      margin-right 4% !important

    &:nth-child(2n)
      margin-right 0 !important

  @media only screen and (max-width: 767px)
    width 100%
    margin-right 0% !important

    &:nth-child(3n)
      margin-right 0 !important

    &:nth-child(2n)
      margin-right 0 !important

.generic
  clear both
  margin-top 75px

// Package Results

.package, .author
  margin-bottom 25px
  padding 0 0 25px
  border-bottom 1px solid gray5

  img
    float left
    margin 0 10px 20px 0

  h2
    margin 0

  h5
    font 600 14px/14px codefonts
    color text-color-subdued

  p
    clear left
    font-weight 600
    color gray3
    margin 0

  span
    color text-color-subdued
    margin 0 15px 0 0
    font-size 12px
    font-weight 600

    &:before
      margin-right 8px

  p.tags
    color text-color-subdued
    font-size 12px !important
    font-weight 600
    margin 2px 0 0

    &:before
      margin-right 6px

    a
      color text-color-subdued
      margin 0
      padding 0
      border 0
      border-radius 0
      text-decoration none

      &:hover
        color npmred
        background none

  &.profile
    border-bottom 0
    padding 0

    p
      clear none
      font-weight 400

.author
  h5
    font-family fonts

    a
      color text-color-subdued

// Collection Results

.collection, .package.third, .ecosystem
  margin-bottom 25px

  .c-name
    position relative
    display block
    height 45px
    border-radius 6px

    img
      float left
      margin 0 10px 0 0
      border-radius 6px 0 0 6px

    a
      display inline-block
      font 700 18px/43px fonts
      color background-color

      &:before
        float left
        font-size 24px
        line-height 45px
        margin-right 8px

    span
      float right
      margin 0 12px 0 0
      color background-color
      font 400 12px/45px fonts

  &.third
    .c-name
      border-radius 6px 6px 0 0
    img
      border-radius 6px 0 0 0

  .c-details
    padding 20px 0

    h5
      margin 0 0 5px

    p
      margin-bottom 15px

      &.tags
        color text-color-subdued
        font-size 12px !important
        font-weight 600
        margin 0

        &:before
          margin-right 6px

        a
          color text-color-subdued
          margin 0
          padding 0
          border 0
          border-radius 0
          text-decoration none

          &:hover
            color npmred
            background none

  &.third
    .c-details
      padding 20px
      border 2px solid gray5
      border-width 0 2px 2px 2px
      border-radius 0 0 6px 6px

      p
        font 400 14px/18px fonts

.ecosystem
  .c-name
    text-align center
    height 140px

    img
      float none
      margin 0
      border-radius 0

    span
      position absolute
      bottom 0px
      right 10px

.package.third
  margin-bottom 25px
  margin-right 3.221730382293762%
  border-bottom 0
  padding-bottom 0

  .c-name
    border 2px solid gray5
    height 43px

    img
      margin -2px 10px 12px -2px

    a
      color text-color

      &:before
        float left
        font-size 24px
        line-height 45px
        margin-right 8px
